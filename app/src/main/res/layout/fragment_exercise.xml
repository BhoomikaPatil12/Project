<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exercise.ExerciseFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:text="为您推荐套题"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:id="@+id/changeBatch"
            android:text="换一批"
            android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_refresh_24"
            app:iconGravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/separate_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        android:background="?colorSurface" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exercise_recycler"
        app:layout_constraintTop_toBottomOf="@id/separate_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        app:layout_constraintTop_toTopOf="@id/exercise_recycler"
        app:layout_constraintBottom_toBottomOf="@id/exercise_recycler"
        app:layout_constraintStart_toStartOf="@id/exercise_recycler"
        app:layout_constraintEnd_toEndOf="@id/exercise_recycler"
        android:indeterminate="true"
        android:id="@+id/progress_circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>